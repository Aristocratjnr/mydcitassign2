#include <iostream>

using namespace std;

int main(){
int sum= 0, average=0, count=0;
for(int i=1 ; i<=10000 ; i++) {
    if(i%2 ==0){
        sum = sum + i;
        count++;
    }
    }
    cout<<"The sum of all even numbers between 1 to 10000:"<<sum;
    cout<<endl;
    cout<<"The number of even terms are:"<< count<<endl;
    average=sum/count;
    cout<<"The average of all even numbers between 1 to 100:"<<average;
    cout<<endl;

    return 0;
}
